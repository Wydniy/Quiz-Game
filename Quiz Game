print("Welcome to Quiz Game")

# Asking if user wants to play game, if not quit application 
play_game = input("Do you want to play? ")
if play_game.lower() != ("yes"):
    quit()

print ("Lets get to quizzing")
score = 0 
print (score)

#Asking questions
question = input ("What is CC? ")
if question.lower() == ("cybersecurity"):
    print("Correct!")
    score = score + 1
    print (score)
else:
    print("Incorrect")

question = input ("What is C In the CIA Triad? ")
if question.lower() == ("confidentiality"):
    print("Correct!")
    score = score + 1 
    print (score)
else:
    print("Incorrect")

question = input ("What is C In the I Triad? ")
if question.lower() == ("integrity"):
    print("Correct!")
    score = score + 1 
    print (score)
else:
    print("Incorrect")

print ("Congratulations, Your Done!!")
if score == 3:
    print("You got Perfect!!")

if score == 1:
    print("You only got 1.... I would try again")

if score == 2:
    print("You got 50%. Well Done")